<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/WordCardViewBackground"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wordOnRus"
                tools:text="123123"
                android:textSize="23sp"
                android:foregroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/transcription"
                tools:text="123123"
                android:textSize="16sp"

                android:foregroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/wordOnEng"
                tools:text="123123"
                android:textSize="23sp"
                android:foregroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/isVisibleTranslate"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_see_translate"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/leftButton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_left_24"
                android:text="Запомнил,повторить потом" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_weight="1"
                android:id="@+id/rightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"

                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:text="Показать это слово ещё раз" />
        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>